@model HR_System.Models.Employee

<div class="container mt-4">
    <h1>@Model.Name Details</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name:</label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label">Date of birth</label>
                    <input asp-for="DateOfBirth" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <input asp-for="Gender" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Number" class="form-label">Phone number</label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Department.Name" class="form-label">Department</label>
                    <input asp-for="Department.Name" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <label asp-for="Salary.Amount" class="form-label">Salary</label>
                    <input asp-for="Salary.Amount" class="form-control" readonly />
                </div>




                <div class="mb-3">
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </form>
        </div>
    </div>
</div>
