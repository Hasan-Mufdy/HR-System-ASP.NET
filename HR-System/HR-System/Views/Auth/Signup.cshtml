<div class="container d-flex justify-content-center mt-5">
    <form method="post" action="/auth/Signup" class="form-signup text-center">
        <h2 class="text-center mb-4">Sign Up</h2>

        <div style="margin-bottom:10px;" class="form-group">
            <label for="username" class="sr-only">Username:</label>
            <input type="text" name="username" class="form-control" id="username" placeholder="Username" required>
        </div>

        <div style="margin-bottom:10px;" class="form-group">
            <label for="email" class="sr-only">Email:</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Email" required>
        </div>

        <div style="margin-bottom:10px;" class="form-group">
            <label for="password" class="sr-only">Password:</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
        </div>

        <div style="margin-bottom:10px;" class="form-group">
            <label for="phonenumber" class="sr-only">Phone number:</label>
            <input type="tel" name="phonenumber" class="form-control" id="phonenumber" placeholder="Phone Number" required>
        </div>

        <div style="margin-bottom:10px;" class="form-group">
            <label for="Roles" class="sr-only">Role:</label>
            <select name="Roles" class="form-control" id="Roles">
                <option value="User">User</option>
                <option value="HR">HR</option>
            </select>
        </div>
        <br>
        <button type="submit" class="btn btn-success">Sign Up</button>
    </form>
</div>




